{% extends noLayout == true ? viewbaseLayout : pagelayout %}

{% block page_head %}
    {% set title = content.name ~ " - " ~ content.contentInfo.publishedDate|localizeddate('short', 'short', app.request.locale) %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <section class="content-type-article full-view">
        <div class="banner-image">
            <div class="thumbnail text-center">
                {{ ez_render_field(content, 'image', {
                    'parameters': {'alias': 'original', 'class': 'img-fluid w-100'}
                }) }}
                <div class="title">
                    <h1 class="field-title">{{ content.getFieldValue('title') }} !!</h1>
                </div>


                <div class="title">
                    <h3>Name: {{ content.name }}</h3>
                </div>
            </div>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-md-8 offset-md-2">

                    <div class="meta">
                        <span class="field-author">
                            {{ content.getFieldValue('author') }}
                        </span>
                        <span class="field-date">
                            <time pubdate datetime="{{ content.getFieldValue('publish_date')|date("Y-m-d") }}">{{ content.getFieldValue('publish_date')|date("d M Y") }}</time>
                        </span>
                    </div>

                    <div class="field-body">
                        {{ ez_render_field(content, 'body') }}
                    </div>
                </div>
            </div>
        </div>

    </section>
{% endblock %}
